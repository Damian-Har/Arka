<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Arka.MainWindow"
        Width="800" Height="600">
  <Window.Styles>
    <StyleInclude Source="avares://Arka/Styles/Brick_Style.axaml"/>
  </Window.Styles>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="2*" />
      <RowDefinition Height="1*" />
    </Grid.RowDefinitions>
    <ContentControl x:Name="ContentArea" Grid.RowSpan="2" />
  </Grid>
</Window>